<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/my_element_root"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical"
    android:foreground="?android:attr/selectableItemBackground">

	<ImageView
        android:id="@+id/my_entry_image"
        android:layout_width="200dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

	<TextView
        android:id="@+id/my_entry_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/my_entry_image"
        app:layout_constraintTop_toTopOf="parent" />

	<TextView
        android:id="@+id/my_entry_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/my_entry_image"
        app:layout_constraintTop_toBottomOf="@+id/my_entry_name" />
</androidx.constraintlayout.widget.ConstraintLayout>