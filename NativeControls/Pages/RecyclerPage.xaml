<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:self="clr-namespace:NativeControls.Pages"
             xmlns:shared="clr-namespace:NativeControls.UserControls.Shared"
             x:Class="NativeControls.Pages.RecyclerPage"
             x:DataType="self:RecyclerPage">
    <Grid>
        <shared:RecyclerView Orientation="{Binding ScrollOrientation}" ItemSource="{Binding Elements}" WidthRequest="400"/>
    </Grid>
</ContentPage>