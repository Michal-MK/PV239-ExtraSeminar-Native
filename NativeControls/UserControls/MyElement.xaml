<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:NativeControls.ViewModels"
             x:Class="NativeControls.UserControls.MyElement"
             x:DataType="vm:MyElementViewModel">
    <Grid ColumnDefinitions="200, *" RowDefinitions="*, *" HeightRequest="200">
        <Image Source="{Binding Image}" Grid.RowSpan="2" Grid.Column="0"/>

        <Label Text="{Binding Name}" Grid.Column="1" />
        <Label Text="{Binding Description}" Grid.Row="1" Grid.Column="1" />
    </Grid>
</ContentView>
